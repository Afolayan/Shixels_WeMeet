<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:orientation="horizontal"
    android:paddingStart="5dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:paddingLeft="5dp">

    <LinearLayout
        android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:layout_marginTop="0dp" >

            <ImageView
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:id="@+id/image_we_meet"
                android:src="@drawable/we_meet2"
                android:layout_width="60dp"
                android:layout_height="40dp" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_view"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                app:srcCompat="@drawable/image"
                android:layout_width="155dp"
                android:layout_height="150dp" />

            <TextView
                android:id="@+id/text_company_name"
                android:layout_marginTop="0dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/image_view"
                android:layout_gravity="center_horizontal"
                android:text="Shixels Studio LTD" />

            <TextView
                android:id="@+id/text_role"
                android:layout_below="@id/text_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Web Designer"
                android:layout_alignRight="@+id/image_view"
                android:layout_alignEnd="@+id/image_view"
                android:layout_alignLeft="@+id/image_view"
                android:layout_alignStart="@+id/image_view" />

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/text_role"
                    android:layout_alignRight="@+id/text_role"
                    android:layout_alignEnd="@+id/text_role"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                        <ImageView
                            android:id="@+id/image_heart"
                            android:src="@mipmap/ic_heart3"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="40dp" />

                        <ImageView
                            android:id="@+id/image_item"
                            android:layout_marginStart="10dp"
                            android:src="@mipmap/ic_widgets"
                            android:foregroundGravity="center_horizontal"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp" />

                </LinearLayout>
            </RelativeLayout>

        <ImageView
            android:id="@+id/image_nav_settings"
            android:src="@mipmap/ic_settings"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp" />
    </LinearLayout>
</LinearLayout>
